@page
@model proyecto_agenda.Pages.categorias.IndexModel
@{
    ViewData["Title"] = "Lista de profesores";
}

<div class="container" >
    <div class="row">
        <div class="col-9">
            <h2 class="text-info"> lista de estudiantes</h2>
        </div>
        <div class="col-3 d-flex p-2">
            <a class="btn btn-primary m-1" href="../Profesor/categorias/crear"> crear una nueva cuenta de estudiante</a>
            <a class="btn btn-secondary m-1" href="../Profesor/categorias/exa"> crear una nueva pregunta de examen</a>
        </div>
    </div>

    <br />
    <br />

    @if (Model.profesores.Count() > 0)
    {
        <table id="tblcategorias" class = " table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(m => m.profesores.FirstOrDefault().Id) </th>
                    <th> @Html.DisplayNameFor(m => m.profesores.FirstOrDefault().Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.profesores.FirstOrDefault().Correo)</th>
                    <th>@Html.DisplayNameFor(m => m.profesores.FirstOrDefault().contraseña)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profesor in Model.profesores)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => profesor.Id)</td>
                        <td>@Html.DisplayFor(m => profesor.Nombre)</td>
                        <td>@Html.DisplayFor(m => profesor.Correo)</td>
                        <td>@Html.DisplayFor(m => profesor.contraseña)</td>
                        <td> <a class="btn btn-primary" asp-page="../categorias/detalle" asp-route-id="@profesor.Id">detalle </a> </td>
                        <td> <a class="btn btn-success" asp-page="../categorias/Editar" asp-route-id="@profesor.Id">editar </a> </td>
                        <td> <a class="btn btn-secondary" asp-page="../categorias/Borrar" asp-route-id="@profesor.Id">Borrar </a> </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    }
    else
    {
        <p>no hay profesores</p>
    }
</div>
